#content
  .container
    .row
      .span9
        %h2= t('.about_us')
        %h4 Committed to student success for over 30 years!
        .thumb2
          .thumbnail.clearfix
            -#%figure.img-polaroid
              -#= image_tag @faculty.image
            .caption
              = @faculty.history.html_safe

        %h3= t('.our_staff')
        .row
          - @persones.each do |persone|
            .span3
              .thumb3
                .thumbnail.clearfix
                  %figure
                    = image_tag persone.photo
                  .caption
                    .txt1= persone.name
                    .txt2= persone.position
                    = link_to t('.read_more'), persone_path(persone), class: "button2"
      .span3
        = render 'web/shared/topics'
