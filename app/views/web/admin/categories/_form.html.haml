= simple_form_for [:admin, @category], :html => { :class => 'form-horizontal' } do |f|
  .well
    = f.input :name
    = f.input :slug
    = f.association :parent
    .form-actions
      = f.button :submit, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_categories_path, :class => 'btn'
