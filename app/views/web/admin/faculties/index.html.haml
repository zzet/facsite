- model_class = Faculty
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:history)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @faculties.each do |faculty|
      %tr
        %td= link_to faculty.id, admin_faculties_path(faculty)
        %td= faculty.name
        %td= faculty.description
        %td= faculty.history
        %td= faculty.image
        %td=l faculty.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_faculties_path(faculty), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_faculties_path(faculty), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_faculties_path, :class => 'btn btn-primary'
