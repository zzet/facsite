= simple_form_for @faculty, url: admin_faculties_path, :html => { :class => 'form-horizontal' } do |f|
  .well
    = f.input :name
    = f.input :description, as: :editor
    = f.input :history, as: :editor
    = f.input :image, as: :image_preview
    .form-actions
      = f.button :submit, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_faculties_path, :class => 'btn'
