- model_class = Faculty
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @faculty.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @faculty.description
%p
  %strong= model_class.human_attribute_name(:history) + ':'
  %br
  = @faculty.history
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = @faculty.image

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_faculties_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_faculties_path(@faculty), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_faculties_path(@faculty), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
