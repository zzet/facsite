- model_class = Answer
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @answer.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @answer.description
%p
  %strong= model_class.human_attribute_name(:question_id) + ':'
  %br
  = @answer.question_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_question_answer_path(@question), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_question_answer_path(@answer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_question_answer_path(@answer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
