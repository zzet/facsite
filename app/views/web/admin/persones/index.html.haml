- model_class = Persone
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:position)
      %th= model_class.human_attribute_name(:photo)
      %th= model_class.human_attribute_name(:bio)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @persones.each do |persone|
      %tr
        %td= link_to persone.id, admin_persone_path(persone)
        %td= persone.name
        %td= persone.position
        %td= image_tag persone.photo
        %td= persone.bio.html_safe
        %td= persone.state
        %td=l persone.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_persone_path(persone), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_persones_path(persone), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_persone_path, :class => 'btn btn-primary'
