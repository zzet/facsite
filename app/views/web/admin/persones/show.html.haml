- model_class = Persone
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @persone.name
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @persone.position
%p
  %strong= model_class.human_attribute_name(:photo) + ':'
  %br
  = image_tag @persone.photo
%p
  %strong= model_class.human_attribute_name(:bio) + ':'
  %br
  = @persone.bio.html_safe
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @persone.state

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_persones_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_persone_path(@persone), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_persone_path(@persone), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
