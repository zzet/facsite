- model_class = Library
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @library.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @library.description
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = @library.image
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @library.state

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_library_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_library_path(@library), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_library_path(@library), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
