= simple_form_for [:admin, @library], :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description, as: :editor
  = f.input :image, as: :image_preview
  = f.input :state_event, as: :state_event
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_libraries_path, :class => 'btn'
