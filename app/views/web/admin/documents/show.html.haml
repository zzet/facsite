- model_class = Document
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @document.title
%p
  %strong= model_class.human_attribute_name(:attachment) + ':'
  %br
  = @document.attachment
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @document.description
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @document.body
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @document.state
%p
  %strong= model_class.human_attribute_name(:photo) + ':'
  %br
  = @document.photo

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_documents_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_document_path(@document), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_document_path(@document), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
