- model_class = Document
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:attachment)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:photo)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @documents.each do |document|
      %tr
        %td= document.id
        %td= document.title
        %td= document.attachment
        %td= document.description
        %td= document.body
        %td= document.state
        %td= document.photo
        %td=l document.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_document_path(document), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_document_path(document), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_document_path, :class => 'btn btn-primary'
