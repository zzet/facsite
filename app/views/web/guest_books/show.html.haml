- model_class = Question
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @question.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @question.description
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @question.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @question.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @question.email

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), guest_books_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_guest_book_path(@question), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), guest_book_path(@question), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
